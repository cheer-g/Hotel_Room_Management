<odoo>

    <template id="accommodation">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Hotel Management</h2>
                    Date :
                    <t t-esc="date_today"/>
                    <t t-call="room_management.details_table"/>
                </div>
            </t>
        </t>
    </template>


    <template id="details_table">
        <table class="table table-sm o_main_table"
               name="accommodations">
            <thead>
                <tr>
                    <th name="th-slno">
                        <span>SL No</span>
                    </th>
                    <th name="th-guest">
                        <span>Guest</span>
                    </th>
                    <th name="th-room">
                        <span>Room No.</span>
                    </th>
                    <th name="th-checkin">
                        <span>Check-in</span>
                    </th>
                    <th name="th-checkout">
                        <span>Check-out</span>
                    </th>
                    <th name="th-rent">
                        <span>Rent</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                <t t-set="sl_no" t-value="1"/>
                <t t-foreach="docs" t-as="line">
                    <tr>
                        <td>
                            <span t-esc="sl_no"/>
                            <t t-set="sl_no" t-value="sl_no+1"/>
                        </td>
                        <td>
                            <t t-esc="line['name']"/>
                        </td>
                        <td>
                            <t t-esc="line['room_no_id']"/>
                        </td>
                        <td>
                            <t t-esc="line['check_in']"/>
                        </td>
                        <td>
                            <t t-esc="line['check_out']"/>
                        </td>
                        <td>
                                    <t t-esc="line['rent_amount']"/>
                            <span>0</span>
                        </td>
                    </tr>
                </t>
            </tbody>
        </table>
    </template>

</odoo>
<odoo>
    <data>

<!--   Form view for Accommodation-->

        <record model="ir.ui.view" id="room_accommodation">
            <field name="name">Accommodation</field>
            <field name="model">room.accommodation</field>
            <field name="arch" type="xml">
                <form string="Accommodation">
                    <header>
                        <button name="action_checkin" type="object"
                                string="Check-In" class="oe_highlight"
                                states="draft"/>
                        <button name="action_checkout" type="object"
                                string="Check-Out" class="oe_highlight"
                                states="checkin"/>
                        <button name="action_cancel" type="object"
                                string="Cancel" class="oe_highlight"
                                states="draft, checkin"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,checkin,checkout"/>
                    </header>
                    <sheet>
                        <group colspan="2">
                            <group col="2">
                                <div class="oe_title">
                                    <h1>
                                        <field name="seq_no" readonly="1"/>
                                    </h1>
                                </div>
                                <field name="guest_id" widget="res_partner_many2one"
                                       context="{'res_partner_search_mode': 'customer',
                                       'show_address': 1, 'show_vat': True}"
                                       options='{"always_reload": True}'/>
                                <field name="guest_count"/>
                                <field name="attachment_ids"
                                       widget="many2many_binary"/>
                            </group>
                            <group col="1">
                                <field name="bed"/>
                                <field name="facilities_ids" widget="many2many_tags"
                                       options="{'no_create_edit': True, 'no_create': True}"/>
                                <field name="room_no_id"  widget="selection"/>
                                <field name="expected_days"
                                       states="draft, checkin"/>
                                <field name="expected_date"
                                       states="draft, checkin"/>
                                <field name="check_in"/>
                                <field name="check_out"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Guests" name="guests">
                                <field name="add_guest_ids">
                                    <tree create="true" delete="true"
                                          editable="bottom">
                                        <field name="add_guest_name"/>
                                        <field name="add_guest_gender"/>
                                        <field name="add_guest_age"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

<!--        Tree view for Accommodation-->

        <record model="ir.ui.view" id="room_accommodation_tree">
            <field name="name">View Accommodations</field>
            <field name="model">room.accommodation</field>
            <field name="arch" type="xml">
                <tree  default_order="check_in desc"
                       decoration-danger="(expected_date &lt; current_date) and (state != 'checkout')"
                        decoration-primary="expected_date==current_date">
                    <field name="seq_no" readonly="1"/>
                    <field name="guest_id"/>
                    <field name="room_no_id"/>
                    <field name="state"/>
                    <field name="bed" optional="hide"/>
                    <field name="expected_date" optional="show"/>
                </tree>
            </field>
        </record>

<!--        Warning wizard for Guest count mismatch-->

        <record id="guest_warning_wizard" model="ir.ui.view">
            <field name="name">Guest count mismatch!</field>
            <field name="model">guest.count.warning</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="guest_count_warning"/>
                        <footer>
                            <button string="OK" special="cancel"
                                    class="oe_highlight"/>
                        </footer>
                    </group>
                </form>
            </field>
        </record>

<!--        Warning Wizard for No Address proof-->

        <record id="address_warning_wizard" model="ir.ui.view">
            <field name="name">Please add address proof!</field>
            <field name="model">address.warning</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="address_proof_warning"/>
                        <footer>
                            <button string="OK" special="cancel"
                                    class="oe_highlight"/>
                        </footer>
                    </group>
                </form>
            </field>
        </record>

<!--        Search view for Accommodation [No cancelled entries]-->
        <record id="state_search_view" model="ir.ui.view">
            <field name="name">State search view</field>
            <field name="model">room.accommodation</field>
            <field name="arch" type="xml">
                <search string="Active Accommodations">
                    <field name="room_no_id"/>
                    <field name="guest_id"/>
                    <field name="seq_no"/>
                    <filter string="Not Cancelled"
                            name="not_cancelled"
                            domain="[('state', 'in', ['draft', 'checkin', 'checkout'])]"/>
                    <filter string="Room" name="room_group"
                            context="{'group_by': 'room_no_id'}"/>
                    <filter string="Type" name="type_group"
                            context="{'group_by': 'bed'}"/>
                    <filter string="State" name="state_group"
                            context="{'group_by': 'state'}"/>
                    <filter string="Check-In" name="state_checkin"
                            domain="[('state', 'not in', ['checkout', 'draft', 'cancel'])]"/>
                    <filter string="Current-day checkout" name="checkout_today"
                            domain="['|',('state', '=', 'checkout'), ('check_out', '=', current_date)]"/>
                    <filter string="Expected check-out next day" name="checkout_next"
                            domain="[('expected_date', '&gt;', current_date)]"/>
                </search>
            </field>
        </record>

<!-- Action for Accommodation menu-->
        <record model="ir.actions.act_window" id="room_management.acc_window">
          <field name="name">Accommodation</field>
          <field name="res_model">room.accommodation</field>
          <field name="view_mode">tree,form</field>
          <field name="context">
              {"search_default_not_cancelled":1,
              }
          </field>
          <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new accommodation
                </p>
                <p>
                    Here you can place new accommodation entries
                </p>
            </field>
        </record>

<!--     Main   menu-->
        <menuitem name="Hotel Room Management" id="room_management.menu_root"/>

<!--        Top menu-->
        <menuitem name="Reception" id="room_management.reception" parent="room_management.menu_root"
                  sequence="1"/>

<!--        Submenu-->
        <menuitem name="Accommodation" id="room_management.acc" parent="room_management.reception"
                  action="room_management.acc_window"/>
    </data>
</odoo>
<odoo>
    <data>
<!--        Form view for Order food Menu-->
        <record id="order_food_form" model="ir.ui.view">
            <field name="name">Order Food</field>
            <field name="model">order.food</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2" style="width:70%%">
                            <div class="oe_title">
                                    <h1>
                                        <field name="order_sequence" readonly="1"/>
                                    </h1>
                            </div>
                            <field name="room_no_id" widget="selection"
                                   options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="accommodation_entry" widget="selection"/>
                            <field name="guest_id" widget="many2one"/>
                            <field name="order_time"/>
                        </group>
                        <notebook>
                            <page string="Menu">
                                <field name="category_id"/>
                                <field name="product_ids" widget="many2many"
                                       options="{'no_create_edit':True, 'no_create':True, 'not_delete': True}">
                                <kanban quick_create="true" create="true" delete="true">
                                    <field name="id"/>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click" style="max-width: 200px">
                                                <div class="o_kanban_record_top">
                                                    <img t-att-src="kanban_image('orders.food', 'image_1920', record.id.raw_value)" class="oe_avatar oe_kanban_avatar_smallbox o_image_40_cover mb0" alt="Avatar"/>
                                                    <div class="o_kanban_record_headings ml8">
                                                        <strong class="o_kanban_record_title"><field name="name"/></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

            <!--Order food form-->
        <record id="order_view_form" model="ir.ui.view">
            <field name="name">order.view.form</field>
            <field name="model">food.menu</field>
            <field name="arch" type="xml">
                <form>
                    <field name="quantity" invisible="1"/>
                    <field name="product_ids" invisible="1"/>
                    <field name="category_id" invisible="1"/>
                    <div class="d-flex">
                        <div class="flex-grow-0 pr-5">
                            <field name="image_1920" widget="image" class="o_lunch_image" options="{'image_preview': 'image_128'}"/>
                        </div>
                        <div class="flex-grow-1 pr-5">
                            <h2><field name="name"/></h2>
                            <h3 class="pt-3"><field name="price" widget="monetary"/></h3>
                        </div>
                    </div>
                    <footer>
                        <button string="Save" special="save" class="oe_highlight" invisible="not context.get('active_id', False)"/>
                        <button string="Add To Cart" name="add_to_cart" type="object" class="oe_highlight" invisible="context.get('active_id', False)"/>
                        <button string="Discard" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


<!--        Tree View for food Orders-->
        <record id="order_food_tree" model="ir.ui.view">
            <field name="name">Orders</field>
            <field name="model">order.food</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order_sequence"/>
                    <field name="room_no_id"/>
                    <field name="guest_id"/>
                </tree>
            </field>
        </record>

<!--        Action for Order food Menu-->
        <record id="order_food_action" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">order.food</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new order
                </p>
                <p>
                Here you can place food orders for checked-in customers
                </p>
            </field>
        </record>



<!--        Menu-->
        <menuitem id="order_food_menu" name="Order Food"
                  parent="room_management.menu_root" action="order_food_action"/>
    </data>
</odoo>
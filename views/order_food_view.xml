<odoo>
    <data>
<!--        Form view for Order food Menu-->
        <record id="order_food_form" model="ir.ui.view">
            <field name="name">Order Food</field>
            <field name="model">order.food</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="2" style="width:70%%">
                            <div class="oe_title">
                                    <h1>
                                        <field name="order_sequence" readonly="1"/>
                                    </h1>
                            </div>
                            <field name="room_no_id" widget="selection"
                                   options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="accommodation_entry" widget="selection" invisible="1"/>
                            <field name="guest_id" widget="selection"
                                   options="{'no_create_edit': True, 'no_create': True}"/>
                            <field name="order_time" readonly="1" force_save="1"/>
                        </group>
                        <notebook>
                            <page string="Menu">
                                <group>
                                <field name="category_ids" widget="many2many_checkboxes" icon="fa-cutlery"/>
<!--                                <button string="Add To List"  name="add_to_list" type="object" class="oe_highlight"/>-->
                                <field name="product_ids"   widget="many2many_kanban"
                                           options="{'no_create_edit':True, 'no_create':True, 'not_delete': True}">
<!--                                           context="{'form_view_ref': 'room_management.order_view_form',-->
<!--                                            'default_company_id':'company_id'}">-->
                                    <kanban quick_create="true" create="true" delete="true">
                                        <field name="id"/>
                                        <field name="food_name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_kanban_record">
                                                    <field name="image"
                                                           class="o_lunch_image o_kanban_image_fill_left d-none d-md-block"
                                                           options="{'placeholder': '/lunch/static/img/lunch.png', 'size': [94, 94]}"
                                                           widget="image"/>
                                                    <div class="oe_kanban_details ml8">
                                                        <div class="o_kanban_record_top">
                                                            <div class="o_kanban_record_headings">
                                                                <strong class="o_kanban_record_title">
                                                                    <div>
                                                                        <strong><span t-esc="record.food_name.value"/></strong>
                                                                    </div>
                                                                    <div class="o_kanban_tags_section">
                                                                        <ul>
                                                                            <li>Price : <field name="price" widget="Monetary"/></li>
                                                                            <li>Category : <field name="category_id"/></li>
                                                                        </ul>
                                                                    </div>
                                                                </strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                                </group>
                            </page>
                            <page string="Order List">
                                <tree>
                                    <field name="order_ids">
                                        <tree editable="bottom">
                                            <field name="food_name"/>
                                            <field name="price"/>
                                            <field name="quantity"/>
                                            <field name="subtotal_price" sum="Total"/>
                                        </tree>
                                    </field>
                                </tree>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

            <!--Order food form-->
        <record id="order_view_form" model="ir.ui.view">
            <field name="name">order.view.form</field>
            <field name="model">food.menu</field>
            <field name="arch" type="xml">
                <form>
<!--                    <field name="company_id"/>-->
<!--                    <field name="order_ids">-->
                        <div class="d-flex">
                            <div class="flex-grow-0 pr-5">
                                <field name="image" widget="image" class="o_lunch_image" options="{'image_preview': 'image_128'}"/>
                            </div>
                            <div class="flex-grow-1 pr-5">
                                <h2><field name="food_name"/></h2>
                                <h3 class="pt-3"><field name="price" widget="monetary"/></h3>
<!--                                <h3 class="pt-3"><field name="category_ids"/></h3>-->
                                    <h3 class="pt-3"><field name="quantity"/></h3>
                                <field name="accommodation_entry"/>
                            </div>
                        </div>
<!--                    </field>-->
                    <footer>
                            <button string="Add To List"  name="add_to_list" type="object" class="oe_highlight"/>
<!--                        <button string="Discard" special="cancel"/>-->
                    </footer>
                </form>
            </field>
        </record>


<!--        Tree View for food Orders-->
        <record id="order_food_tree" model="ir.ui.view">
            <field name="name">Orders</field>
            <field name="model">order.food</field>
            <field name="arch" type="xml">
                <tree sample="1" default_order="order_sequence desc">
                    <field name="order_sequence"/>
                    <field name="room_no_id"/>
                    <field name="guest_id"/>
                </tree>
            </field>
        </record>

<!--        Action for Order food Menu-->
        <record id="order_food_action" model="ir.actions.act_window">
            <field name="name">Orders</field>
            <field name="res_model">order.food</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                Create a new order
                </p>
                <p>
                Here you can place food orders for checked-in customers
                </p>
            </field>
        </record>

        <record id="order_form_food" model="ir.actions.act_window">
            <field name="name">Add product</field>
            <field name="res_model">food.menu</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="order_view_form"/>
        </record>

<!--        <record id="test_window" model="ir.actions.act_window">-->
<!--            <field name="name">Order Food</field>-->
<!--            <field name="res_model">food.menu</field>-->
<!--            <field name="view_mode">form</field>-->
<!--        </record>-->


<!--        Menu-->
        <menuitem id="order_food_menu" name="Order Food"
                  parent="room_management.menu_root" action="order_food_action"/>
    </data>
</odoo>